<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sql.bms">
	<select id="select" parameterType="string" resultType="book">
		select * from book
		<if test="value!=null">
			where isbn=#{isbn}
		</if>
	</select>
	<insert id="insert" parameterType="book">
		insert into book values (#{isbn},#{title},#{authourno},#{price},#{publisher},#{description})
	</insert>
	<delete id="delete" parameterType="string">
		delete from book where isbn =
		#{isbn}
	</delete>

	<update id="update" parameterType="book">
		update book set
		description = #{description} where isbn = #{isbn}
	</update>
	
	
	<select id="selectDetail" resultMap="bookDetail"
		parameterType="book">
		select b.isbn,b.title,b.publisher,b.authourno, a.name, b.description
		from book b
		join author a using(authourno)
		<if test="isbn!=null"> <!-- num이 있을 때만. -->
			where isbn = #{isbn}
		</if>
	</select>
	<resultMap type="book" id="bookDetail">
		<id column="isbn" property="isbn" />
		<result column="title" property="title" />
		<result column="publisher" property="publisher" />
		<result column="authourno" property="authourno" />
		<association property="author" javaType="author">
			<id column="authourno" property="authourno" />
			<result column="name" property="name" />
			<result column="phone" property="phone" />
		</association>
	</resultMap>
</mapper>






