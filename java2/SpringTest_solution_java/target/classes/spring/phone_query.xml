<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sql.pms">
	<insert id="restInsert" parameterType="phone">
		insert into phones values (#{num}, #{model}, #{price}, #{vcode})
	</insert>
	
	<select id="restSelect" parameterType="string" resultType="phone">
		select * from phones where num = #{num}
	</select>
	
	<select id="restSelectAll" resultMap="phoneDetail">
		select p.num, p.model, p.price, p.vcode, c.vcode, c.vendor from phones p join company c using(vcode)
		<if test="num != null">
			where num=#{num}
		</if>
	</select>
	
	<delete id="restDelete" parameterType="string">
		delete from phones where num = #{num}
	</delete>
	
	<update id="restUpdate" parameterType="phone">
		update phones set model = #{model} where num = #{num}
	</update>



	<select id="selectUser" parameterType="userinfo"
		resultType="userinfo">
		select * from userinfo
		where id = #{id}
		<if test="pw!=null">
			and pw = #{pw}
		</if>
	</select>
	<insert id="insert" parameterType="phone">
		insert into
		phones (num, model,
		price, vcode)
		values( #{num},#{model},#{price},#{vcode} )
	</insert>
	<!-- <select id="select" resultMap="phoneDetail" parameterType="phone"> -->
	<!-- select p.num,p.model,p.price,p.vcode, c.vcode, c.vendor -->
	<!-- from phones p join company c using(vcode) -->
	<!-- </select> -->
	<select id="selectDetail" resultMap="phoneDetail"
		parameterType="phone">
		select p.num,p.model,p.price,p.vcode, c.vcode, c.vendor
		from phones p
		join company c using(vcode)
		<if test="num!=null"> <!-- num이 있을 때만. -->
			where num = #{num}
		</if>
	</select>
	<resultMap type="phone" id="phoneDetail">
		<id column="num" property="num" />
		<result column="model" property="model" />
		<result column="price" property="price" />
		<result column="vcode" property="vcode" />
		<association property="comp" javaType="company">
			<id column="vcode" property="vcode" />
			<result column="vendor" property="vendor" />
		</association>
	</resultMap>
	<delete id="delete" parameterType="phone">
		delete from phones where num in
		<foreach collection="list" item="num" open="(" separator=","
			close=")">#{num}</foreach>
	</delete>
</mapper>






