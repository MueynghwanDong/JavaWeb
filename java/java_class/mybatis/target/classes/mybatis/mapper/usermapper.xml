<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.mapper.usermapper">
	<select id="selectByMap" parameterType="String" resultType="map">
		select * from user where userid = #{userid}
	</select>
	<select id="selectByBean" parameterType="String"
		resultType="user">
		select * from user where userid = #{userid}
	</select>
	<select id="selectByAll" resultType="user">
		select * from user
	</select>
	<select id="insert" parameterType="user">
		insert into user(userid, name,pass,balance)
		values(#{userid},#{name},#{pass},#{balance})
	</select>
	<select id="update" parameterType="user">
		update user set name = #{name}, pass=#{pass}, balance = #{balance} where userid = #{userid}  
	</select>
	<select id="delete" parameterType="String">
		delete from user where userid = #{userid}  
	</select>
</mapper>